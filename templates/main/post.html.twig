{% extends 'base.html.twig' %}

{% block title %}Blogg | {{ pageName }}{% endblock %}

{% block main %}

    <div class="flex row">

        <aside class="w-1/2 mx-5 rounded-lg bg-cyan-400 p-5 text-start leading-8">
            <p>Auteur : {{ postForView.author.firstname}} {{ postForView.author.lastname}}</p>
            <p>Date : {{postForView.createdAt|date("d/m/Y")}}</p>
        </aside>

        <div class="">
          <div class="px-5 pb-5">
            <img class="fit-picture rounded-lg object-cover w-full h-32" src={{postForView.poster}} alt="image post">
            <h2 class="py-3 text-xl font-semibold">{{postForView.title}}</h2>
            <p>{{ postForView.body }}</p>
            <span class="inline-block my-2 py-1 px-4 rounded-lg bg-orange-600 hover:bg-orange-800 hover:text-white"><a href="#">Modifier</a></span>
            <span class="inline-block my-2 py-1 px-4 rounded-lg bg-red-600 hover:bg-red-800 hover:text-white"><a href="#">Supprimer</a></span>
                    
          </div>
        </div>

    </div>
{% endblock %}
